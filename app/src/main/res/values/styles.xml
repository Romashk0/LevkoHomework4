<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:background">@drawable/selector_tv</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/textView_height</item>
        <item name="android:layout_margin">@dimen/textView_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/colorDarkBlue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/shape_et</item>
        <item name="android:textSize">@dimen/textSizeET</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/textView_height</item>
        <item name="android:layout_margin">@dimen/textView_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:textSize">@dimen/textSizeBtn</item>
    </style>

    <style name="TextViewResStyle">
        <item name="android:background">@drawable/shape_tv_result</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/textView_height</item>
        <item name="android:layout_margin">@dimen/textView_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/colorDarkBlue</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="AppTheme2" parent="Base.Theme.AppCompat"/>

</resources>
